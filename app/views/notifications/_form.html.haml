- unless @notification.errors.empty?
  .alert.alert-danger
    %h3 Error saving notification
    %ul
      - @notification.errors.full_messages.each do |msg|
        %li= msg
= form_for @notification do |f|
  .form-group
    = f.label :name, class: 'control-label col-lg-3'
    .col-lg-9
      = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :message, class: 'control-label col-lg-3'
    .col-lg-9
      = f.text_area :message, rows: 10, class: 'form-control'

  .form-group
    = f.submit class: 'btn btn-primary pull-right'